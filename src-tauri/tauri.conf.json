{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Huaan Command",
  "version": "1.1.0",
  "identifier": "com.huaaan.command",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Huaan",
    "copyright": "Copyright © 2024 Huaan. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "智能终端命令管理工具",
    "longDescription": "Huaan Command 是一款现代化的终端命令管理工具，集成了 AI 助手，支持任务管理、终端会话管理和智能命令生成。",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null,
      "hardenedRuntime": true,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "license": "",
    "licenseFile": "",
    "createUpdaterArtifacts": false
  }
}
